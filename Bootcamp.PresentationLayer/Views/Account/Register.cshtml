
@{
    Layout = null;
}
@model RegisterViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol | Yapay Zeka Eğitim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #F2F2F2;
        }

        .sticky-top {
            z-index: 1030;
        }
    </style>
</head>
<body>
    <main class="container d-flex flex-column justify-content-center align-items-center min-vh-100">
        <div class="login-card bg-white shadow rounded-4 p-4 p-md-5" style="max-width: 400px; width: 100%;">
            <div class="text-center mb-4">
                <a href="index.html" class="navbar-brand fw-bold mb-2" style="color:#6F42C1; font-size:1.7rem;">Yapay Zeka Eğitim</a>
                <div class="mb-2 text-muted" style="font-size:1.1rem;">Hesabınızı oluşturun.</div>
            </div>
            <form asp-controller="Account" asp-action="Register" method="post">

                <div class="mb-3">
                    <label>Ad Soyad</label>
                    <input asp-for="NameSurname" class="form-control" />
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Şifre</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Şifre Tekrar</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Cinsiyet</label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">Seçiniz...</option>
                        <option value="Erkek">Erkek</option>
                        <option value="Kadın">Kadın</option>
                        <option value="Diğer">Diğer</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            </form>
            @if (ViewBag.ValidationErrors != null)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var err in ViewBag.ValidationErrors)
                        {
                            <li>@err</li>
                        }
                    </ul>
                </div>
            }

            @if (ViewBag.IdentityErrors != null)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var err in ViewBag.IdentityErrors)
                        {
                            <li>@err</li>
                        }
                    </ul>
                </div>
            }

            <div class="text-center mt-3">
                <span class="text-muted">Zaten hesabınız var mı?</span> <a href="login.html" style="color:#6F42C1;">Giriş Yap</a>
            </div>
        </div>
        <footer class="text-center mt-4 text-muted small">© 2024 Yapay Zeka Eğitim Platformu</footer>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 