@{
    ViewData["Title"] = "PDF Özetle";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Özetle | Yapay Zeka Eğitim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .pdf-upload-area {
            border: 3px dashed #6F42C1;
            border-radius: 15px;
            padding: 3rem;
            text-align: center;
            background: linear-gradient(135deg, #f8f9ff 0%, #e8f4fd 100%);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .pdf-upload-area:hover {
            border-color: #8B5CF6;
            background: linear-gradient(135deg, #f0f4ff 0%, #e0f0fd 100%);
            transform: translateY(-2px);
        }

        .pdf-upload-area.dragover {
            border-color: #A855F7;
            background: linear-gradient(135deg, #e8f0ff 0%, #d0e8fd 100%);
            transform: scale(1.02);
        }

        .summary-area {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-top: 2rem;
            max-height: 600px;
            overflow-y: auto;
        }

        .loading-spinner {
            display: none;
            text-align: center;
            padding: 2rem;
        }

        .file-info {
            background: #e8f4fd;
            border-radius: 10px;
            padding: 1rem;
            margin: 1rem 0;
            display: none;
        }

        .error-message {
            background: #ffe8e8;
            border: 1px solid #ffcccc;
            border-radius: 10px;
            padding: 1rem;
            margin: 1rem 0;
            color: #d63384;
            display: none;
        }

        .success-message {
            background: #e8fdf0;
            border: 1px solid #ccffcc;
            border-radius: 10px;
            padding: 1rem;
            margin: 1rem 0;
            color: #198754;
            display: none;
        }
    </style>
</head>

<!-- Hero Section -->
<section class="hero-section text-center text-white position-relative" style="background: linear-gradient(135deg, #6F42C1 0%, #8B5CF6 50%, #A855F7 100%); padding: 4rem 0; margin-bottom: 3rem;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="animate-fadein">
                    <h1 class="display-4 fw-bold mb-4">
                        <i class="bi bi-file-earmark-pdf me-3"></i>PDF Özetle
                    </h1>
                    <p class="lead mb-4">
                        Herhangi bir PDF dosyasını yükleyin, Gemini AI ile otomatik özet alın
                    </p>
                    <div class="hero-features">
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="feature-item">
                                    <i class="bi bi-upload fs-1 mb-3"></i>
                                    <h5>Kolay Yükleme</h5>
                                    <p>Sürükle-bırak ile PDF yükleyin</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="feature-item">
                                    <i class="bi bi-robot fs-1 mb-3"></i>
                                    <h5>AI Özetleme</h5>
                                    <p>Gemini AI ile akıllı özet</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="feature-item">
                                    <i class="bi bi-lightning fs-1 mb-3"></i>
                                    <h5>Hızlı Sonuç</h5>
                                    <p>Saniyeler içinde özet alın</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<main class="container py-5">
    <!-- PDF Upload Area -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="pdf-upload-area" id="uploadArea">
                <div class="upload-content">
                    <i class="bi bi-cloud-upload fs-1 text-primary mb-3"></i>
                    <h3 class="mb-3">PDF Dosyanızı Buraya Sürükleyin</h3>
                    <p class="text-muted mb-4">
                        veya dosya seçmek için tıklayın
                    </p>
                    <input type="file" id="pdfFile" accept=".pdf" style="display: none;">
                    <button class="btn btn-primary btn-lg" onclick="document.getElementById('pdfFile').click()">
                        <i class="bi bi-file-earmark-pdf me-2"></i>PDF Seç
                    </button>
                    <div class="mt-3">
                        <small class="text-muted">
                            Maksimum dosya boyutu: 10MB
                        </small>
                    </div>
                    <div class="mt-4">
                        <button class="btn btn-success btn-lg" onclick="summarizePdf()" id="summarizeBtn" style="display: none;">
                            <i class="bi bi-robot me-2"></i>PDF Özetle
                        </button>
                    </div>
                </div>
            </div>

            <!-- File Info -->
            <div class="file-info" id="fileInfo">
                <div class="d-flex align-items-center">
                    <i class="bi bi-file-earmark-pdf text-primary me-3 fs-4"></i>
                    <div class="flex-grow-1">
                        <h6 class="mb-1" id="fileName">Dosya Adı</h6>
                        <small class="text-muted" id="fileSize">Dosya Boyutu</small>
                    </div>
                    <button class="btn btn-outline-danger btn-sm" onclick="removeFile()">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Error Message -->
            <div class="error-message" id="errorMessage">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <span id="errorText"></span>
            </div>

            <!-- Success Message -->
            <div class="success-message" id="successMessage">
                <i class="bi bi-check-circle me-2"></i>
                <span id="successText"></span>
            </div>

            <!-- Loading Spinner -->
            <div class="loading-spinner" id="loadingSpinner">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <h5>PDF Özetleniyor...</h5>
                <p class="text-muted">Bu işlem birkaç dakika sürebilir</p>
            </div>

            <!-- Summary Area -->
            <div class="summary-area" id="summaryArea" style="display: none;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-text text-primary me-2"></i>PDF Özeti
                    </h4>
                    <button class="btn btn-outline-primary btn-sm" onclick="downloadSummary()">
                        <i class="bi bi-download me-1"></i>İndir
                    </button>
                </div>
                <div id="summaryContent" style="white-space: pre-wrap; line-height: 1.6;"></div>
            </div>
        </div>
    </div>
</main>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const uploadArea = document.getElementById('uploadArea');
    const pdfFile = document.getElementById('pdfFile');
    const fileInfo = document.getElementById('fileInfo');
    const errorMessage = document.getElementById('errorMessage');
    const successMessage = document.getElementById('successMessage');
    const loadingSpinner = document.getElementById('loadingSpinner');
    const summaryArea = document.getElementById('summaryArea');
    const summaryContent = document.getElementById('summaryContent');

    let selectedFile = null;

    // Drag and drop events
    uploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        uploadArea.classList.remove('dragover');
        
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            handleFile(files[0]);
        }
    });

    // File input change
    pdfFile.addEventListener('change', function(e) {
        if (e.target.files.length > 0) {
            handleFile(e.target.files[0]);
        }
    });

    function handleFile(file) {
        // Reset messages
        hideMessages();

        // Validate file
        if (!file.type.includes('pdf')) {
            showError('Lütfen sadece PDF dosyası seçin.');
            return;
        }

        if (file.size > 10 * 1024 * 1024) { // 10MB
            showError('Dosya boyutu 10MB\'dan büyük olamaz.');
            return;
        }

        selectedFile = file;
        showFileInfo(file);
        document.getElementById('summarizeBtn').style.display = 'inline-block';
        showSuccess('PDF dosyası başarıyla yüklendi. Özetlemek için "PDF Özetle" butonuna tıklayın.');
    }

    function showFileInfo(file) {
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        
        fileName.textContent = file.name;
        fileSize.textContent = formatFileSize(file.size);
        fileInfo.style.display = 'block';
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }

    function removeFile() {
        selectedFile = null;
        fileInfo.style.display = 'none';
        summaryArea.style.display = 'none';
        document.getElementById('summarizeBtn').style.display = 'none';
        hideMessages();
        pdfFile.value = '';
    }

    // Global functions for external access
    window.removeFile = removeFile;

    function hideMessages() {
        errorMessage.style.display = 'none';
        successMessage.style.display = 'none';
    }

    function showError(message) {
        document.getElementById('errorText').textContent = message;
        errorMessage.style.display = 'block';
        successMessage.style.display = 'none';
    }

    function showSuccess(message) {
        document.getElementById('successText').textContent = message;
        successMessage.style.display = 'block';
        errorMessage.style.display = 'none';
    }

    // Global functions for external access
    window.hideMessages = hideMessages;
    window.showError = showError;
    window.showSuccess = showSuccess;

    // Global functions for external access
    window.summarizePdf = function() {
        if (!selectedFile) {
            showError('Lütfen önce bir PDF dosyası seçin.');
            return;
        }

        const formData = new FormData();
        formData.append('pdfFile', selectedFile);

        // Show loading
        loadingSpinner.style.display = 'block';
        summaryArea.style.display = 'none';
        hideMessages();

        fetch('/PdfSummary/SummarizePdf', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            loadingSpinner.style.display = 'none';
            
            if (data.success) {
                summaryContent.textContent = data.summary;
                summaryArea.style.display = 'block';
                showSuccess('PDF başarıyla özetlendi!');
            } else {
                showError(data.message);
            }
        })
        .catch(error => {
            loadingSpinner.style.display = 'none';
            showError('Bir hata oluştu: ' + error.message);
        });
    };

    window.downloadSummary = function() {
        const summary = summaryContent.textContent;
        if (!summary) return;

        const blob = new Blob([summary], { type: 'text/plain' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'pdf_ozeti.txt';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
    };
});
</script> 