
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yapay Zeka Destekli Eğitim Platformu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/frontend/css/style.css">
    <link rel="stylesheet" href="/frontend/css/lesson-detail.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body style="background:#fff;">
    <!-- Sticky Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm py-3" id="mainNavbar">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/Home/Index/" style="color:#6F42C1;font-size:1.7rem;letter-spacing:1px;">
                <i class="bi bi-lightbulb me-2" style="font-size:2rem;"></i>Akıllı Kampüs
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link px-3" href="/Lesson/Index/">Eğitimler</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="/PdfSummary/Index">PDF Özetle</a></li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link px-3" href="/Account/Login/">Giriş Yap</a></li>
                        <li class="nav-item">
                            <a class="btn btn-primary ms-2 px-3" href="/Account/Register/"
                               style="background:linear-gradient(135deg, #667eea, #764ba2); border:none; border-radius:12px;">
                                Kayıt Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link px-3" href="/UserProfile/Index/">Profilim</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="top-wave">
        <svg viewBox="0 0 1440 90" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" style="width:100%;height:100%;display:block;"><path d="M0 60 Q 360 0 720 60 T 1440 60 V90 H0Z" fill="#6F42C1" fill-opacity="0.10" /><path d="M0 80 Q 360 40 720 80 T 1440 80 V90 H0Z" fill="#6F42C1" fill-opacity="0.16" /></svg>
    </div>
    <!-- Hero Section -->
    @RenderBody()
    <!-- Footer -->
    <footer class="modern-footer py-5" style="background: linear-gradient(135deg, #6F42C1 0%, #8B5CF6 50%, #A855F7 100%); color:#fff; font-size:1.05rem; margin-top:4rem; position: relative; overflow: hidden;">
        <!-- Footer Arka Plan Efekti -->
        <div class="footer-bg-pattern position-absolute top-0 start-0 w-100 h-100" style="opacity: 0.1; pointer-events: none;">
            <svg viewBox="0 0 1440 400" fill="none" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
                <defs>
                    <pattern id="footer-dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
                        <circle cx="20" cy="20" r="2" fill="#fff" />
                    </pattern>
                </defs>
                <rect width="100%" height="100%" fill="url(#footer-dots)" />
            </svg>
        </div>

        <div class="container position-relative">
            <!-- Ana Footer İçeriği -->
            <div class="row g-4 mb-5">
                <!-- Logo ve Açıklama -->
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <div class="footer-brand-section">
                        <a class="navbar-brand fw-bold d-flex align-items-center mb-3" href="#" style="color:#fff;font-size:1.8rem;letter-spacing:1px;">
                            <i class="bi bi-lightbulb me-2" style="font-size:2.2rem; color: #FFC107;"></i>Yapay Zeka Eğitim
                        </a>
                        <p class="mb-3" style="opacity: 0.9; line-height: 1.6;">Geleceğin eğitim platformu ile yapay zeka destekli öğrenme deneyimini keşfedin. Kişiselleştirilmiş eğitimler ve 7/24 AI asistan desteği.</p>
                        <div class="footer-stats d-flex gap-4">
                            <div class="stat-item text-center">
                                <div class="stat-number fw-bold" style="color: #FFC107; font-size: 1.5rem;">10K+</div>
                                <div class="stat-label" style="opacity: 0.8; font-size: 0.9rem;">Öğrenci</div>
                            </div>
                            <div class="stat-item text-center">
                                <div class="stat-number fw-bold" style="color: #FFC107; font-size: 1.5rem;">500+</div>
                                <div class="stat-label" style="opacity: 0.8; font-size: 0.9rem;">Eğitim</div>
                            </div>
                            <div class="stat-item text-center">
                                <div class="stat-number fw-bold" style="color: #FFC107; font-size: 1.5rem;">98%</div>
                                <div class="stat-label" style="opacity: 0.8; font-size: 0.9rem;">Memnuniyet</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hızlı Bağlantılar -->
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <div class="footer-links-section">
                        <h5 class="fw-bold mb-3" style="color: #FFC107;">Hızlı Bağlantılar</h5>
                        <ul class="list-unstyled footer-links">
                            <li class="mb-2"><a href="#features" class="footer-link">Hakkımızda</a></li>
                            <li class="mb-2"><a href="lessons.html" class="footer-link">Eğitimler</a></li>
                            <li class="mb-2"><a href="#success-stories" class="footer-link">Başarı Hikayeleri</a></li>
                            <li class="mb-2"><a href="#team-showcase" class="footer-link">Eğitmenler</a></li>
                            <li class="mb-2"><a href="#faq" class="footer-link">SSS</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Destek -->
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <div class="footer-links-section">
                        <h5 class="fw-bold mb-3" style="color: #FFC107;">Destek</h5>
                        <ul class="list-unstyled footer-links">
                            <li class="mb-2"><a href="#" class="footer-link">Yardım Merkezi</a></li>
                            <li class="mb-2"><a href="#" class="footer-link">İletişim</a></li>
                            <li class="mb-2"><a href="#" class="footer-link">Geri Bildirim</a></li>
                            <li class="mb-2"><a href="#" class="footer-link">Topluluk</a></li>
                            <li class="mb-2"><a href="#" class="footer-link">Blog</a></li>
                        </ul>
                    </div>
                </div>

                <!-- İletişim -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-contact-section">
                        <h5 class="fw-bold mb-3" style="color: #FFC107;">İletişim</h5>
                        <div class="contact-info mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-geo-alt-fill me-2" style="color: #FFC107;"></i>
                                <span style="opacity: 0.9;">İstanbul, Türkiye</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-envelope-fill me-2" style="color: #FFC107;"></i>
                                <span style="opacity: 0.9;">info@yapayzekaegitim.com</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-telephone-fill me-2" style="color: #FFC107;"></i>
                                <span style="opacity: 0.9;">+90 (212) 555 0123</span>
                            </div>
                        </div>

                        <!-- Sosyal Medya -->
                        <div class="social-media-section">
                            <h6 class="fw-semibold mb-2" style="opacity: 0.9;">Bizi Takip Edin</h6>
                            <div class="social-links d-flex gap-3">
                                <a href="#" class="social-link" aria-label="Instagram">
                                    <i class="bi bi-instagram"></i>
                                </a>
                                <a href="#" class="social-link" aria-label="Twitter">
                                    <i class="bi bi-twitter-x"></i>
                                </a>
                                <a href="#" class="social-link" aria-label="LinkedIn">
                                    <i class="bi bi-linkedin"></i>
                                </a>
                                <a href="#" class="social-link" aria-label="YouTube">
                                    <i class="bi bi-youtube"></i>
                                </a>
                                <a href="#" class="social-link" aria-label="Facebook">
                                    <i class="bi bi-facebook"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alt Footer -->
            <div class="footer-bottom border-top border-white-25 pt-4">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-check me-2" style="color: #FFC107;"></i>
                            <span style="opacity: 0.8;">© 2024 Yapay Zeka Eğitim Platformu. Tüm hakları saklıdır.</span>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="d-flex gap-3 justify-content-md-end">
                            <a href="#" class="footer-bottom-link">Gizlilik Politikası</a>
                            <a href="#" class="footer-bottom-link">Kullanım Şartları</a>
                            <a href="#" class="footer-bottom-link">Çerez Politikası</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/frontend/js/main.js"></script>
</body>
</html> 