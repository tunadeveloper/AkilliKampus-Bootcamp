@model IEnumerable<Bootcamp.EntityLayer.Concrete.Reference>

<section class="container py-5 animate-fadein-delay4" id="success-stories">
    <div class="row align-items-center g-4 mb-4">
        <div class="col-md-4">
            <div class="success-stat-card bg-white shadow-sm rounded-4 p-4 text-center h-100 d-flex flex-column justify-content-center">
                <div class="stat-icon mb-3">
                    <i class="bi bi-heart-fill" style="color:#6F42C1;font-size:2rem;"></i>
                </div>
                <div class="display-5 fw-bold mb-2 stat-number" style="color:#6F42C1;">%98</div>
                <div class="text-muted stat-label">Memnuniyet Oranı</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="success-stat-card bg-white shadow-sm rounded-4 p-4 text-center h-100 d-flex flex-column justify-content-center">
                <div class="stat-icon mb-3">
                    <i class="bi bi-mortarboard-fill" style="color:#FFC107;font-size:2rem;"></i>
                </div>
                <div class="display-5 fw-bold mb-2 stat-number" style="color:#FFC107;">500+</div>
                <div class="text-muted stat-label">Mezun Öğrenci</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="success-stat-card bg-white shadow-sm rounded-4 p-4 text-center h-100 d-flex flex-column justify-content-center">
                <div class="stat-icon mb-3">
                    <i class="bi bi-people-fill" style="color:#6F42C1;font-size:2rem;"></i>
                </div>
                <div class="display-5 fw-bold mb-2 stat-number" style="color:#6F42C1;">10.000+</div>
                <div class="text-muted stat-label">Aktif Öğrenci</div>
            </div>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        @if (Model != null && Model.Any())
        {
            @foreach (var reference in Model.OrderBy(r => r.Order).Take(3))
            {
                <div class="col-md-4">
                    <div class="success-story-card bg-white shadow p-4 rounded-4 h-100">
                        <div class="story-header d-flex align-items-center mb-3">
                            <div class="story-avatar me-3">
                                @if (!string.IsNullOrEmpty(reference.ImageUrl))
                                {
                                    <img src="@reference.ImageUrl" alt="@reference.NameSurname" class="rounded-circle" style="width:54px;height:54px;object-fit:cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width:54px;height:54px;">
                                        <i class="bi bi-person text-muted"></i>
                                    </div>
                                }
                            </div>
                            <div class="story-info">
                                <div class="fw-semibold story-name">@reference.NameSurname</div>
                                <div class="text-muted small story-title">@reference.PositionName</div>
                            </div>
                        </div>
                        <div class="story-quote">
                            <i class="bi bi-quote quote-icon"></i>
                            <div class="fst-italic text-muted story-text">"@reference.Comment"</div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-4">
                <i class="bi bi-star text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">Henüz referans bulunmuyor.</p>
            </div>
        }
    </div>
</section>