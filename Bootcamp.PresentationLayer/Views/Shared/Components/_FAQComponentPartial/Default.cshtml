@model IEnumerable<Bootcamp.EntityLayer.Concrete.FAQ>

<section class="container py-5 animate-fadein-delay5" id="faq">
    <h2 class="section-title mb-4 text-center" style="color:#6F42C1;"><i class="bi bi-question-circle-fill me-2"></i>Sıkça Sorulan Sorular</h2>
    <div class="accordion" id="faqAccordion">
        @if (Model != null && Model.Any())
        {
            @foreach (var faq in Model.OrderBy(f => f.Order))
            {
                <div class="accordion-item sss-card">
                    <h2 class="accordion-header" id="faq@(faq.Id)-heading">
                        <button class="accordion-button sss-header @(faq.Order == 1 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#faq@(faq.Id)" aria-expanded="@(faq.Order == 1 ? "true" : "false")" aria-controls="faq@(faq.Id)">
                            <i class="@faq.Icon me-2"></i> @faq.Title
                        </button>
                    </h2>
                    <div id="faq@(faq.Id)" class="accordion-collapse collapse @(faq.Order == 1 ? "show" : "")" aria-labelledby="faq@(faq.Id)-heading" data-bs-parent="#faqAccordion">
                        <div class="accordion-body sss-body">@faq.Description</div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-question-circle text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">Henüz SSS bulunmuyor.</p>
            </div>
        }
    </div>
</section>