@model Bootcamp.EntityLayer.Concrete.Comment
@{
    ViewData["Title"] = "Yorum Sil";
}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Yorum Sil</h1>
            <p class="page-subtitle">Bu yorumu silmek istediğinizden emin misiniz?</p>
        </div>
        <a href="@Url.Action("Index", "Comment", new { area = "Admin" })" class="btn btn-secondary-custom">
            <i class="bi bi-arrow-left me-2"></i>
            Geri Dön
        </a>
    </div>
</div>
<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Silme Onayı
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Dikkat!</strong> Bu işlem geri alınamaz. Yorum kalıcı olarak silinecektir.
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label">Kullanıcı</label>
                    <input type="text" class="form-control" value="@(Model.ApplicationUser?.NameSurname ?? "-")" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label">Kurs</label>
                    <input type="text" class="form-control" value="@(Model.Course?.Name ?? "-")" readonly />
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Yorum Metni</label>
            <textarea class="form-control" rows="4" readonly>@Model.Text</textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Oluşturulma Tarihi</label>
            <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")" readonly />
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger-custom">
                    <i class="bi bi-trash me-2"></i>
                    Evet, Sil
                </button>
                <a href="@Url.Action("Index", "Comment", new { area = "Admin" })" class="btn btn-secondary-custom">
                    <i class="bi bi-x-circle me-2"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div> 