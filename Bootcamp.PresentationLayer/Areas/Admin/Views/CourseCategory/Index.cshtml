@model IEnumerable<Bootcamp.EntityLayer.Concrete.CourseCategory>
@{
    ViewData["Title"] = "Kategoriler";
    int count = 0;
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Kategoriler</h1>
            <p class="page-subtitle">Kurs kategorilerini yönetin ve düzenleyin.</p>
        </div>
        <a href="@Url.Action("Create", "CourseCategory", new { area = "Admin" })" class="btn btn-primary-custom">
            <i class="bi bi-plus-circle me-2"></i>
            Yeni Kategori
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success-custom alert-custom">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["Success"]
    </div>
}

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="bi bi-tags me-2"></i>
            Kategori Listesi
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kategori Adı</th>
                            <th>Kurs Sayısı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-gradient rounded-circle p-2 me-3">
                                            <i class="bi bi-tag text-white"></i>
                                        </div>
                                        <span class="fw-semibold">@category.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@(category.Courses?.Count ?? 0) kurs</span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("Edit", "CourseCategory", new { area = "Admin", id = category.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", "CourseCategory", new { area = "Admin", id = category.Id })" 
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-tags text-muted" style="font-size: 4rem;"></i>
                </div>
                <h5 class="text-muted mb-3">Henüz kategori bulunmuyor</h5>
                <p class="text-muted mb-4">İlk kategoriyi ekleyerek başlayın.</p>
                <a href="@Url.Action("Create", "CourseCategory", new { area = "Admin" })" class="btn btn-primary-custom">
                    <i class="bi bi-plus-circle me-2"></i>
                    İlk Kategoriyi Ekle
                </a>
            </div>
        }
    </div>
</div> 