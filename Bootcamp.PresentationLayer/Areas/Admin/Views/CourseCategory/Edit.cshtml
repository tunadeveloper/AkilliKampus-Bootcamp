@model Bootcamp.EntityLayer.Concrete.CourseCategory
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Kategori Düzenle</h1>
            <p class="page-subtitle">"@Model.Name" kategorisini düzenleyin.</p>
        </div>
        <a href="@Url.Action("Index", "CourseCategory", new { area = "Admin" })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Geri Dön
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="bi bi-pencil me-2"></i>
                    Kategori Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">
                            <i class="bi bi-tag me-2"></i>
                            Kategori Adı
                        </label>
                        <input asp-for="Name" class="form-control form-control-custom" 
                               placeholder="Örn: Yapay Zeka, Web Geliştirme, Mobil Uygulama">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            Kategori adını güncelleyebilirsiniz. Bu değişiklik tüm bağlı kursları etkileyecektir.
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-success-custom">
                            <i class="bi bi-check-circle me-2"></i>
                            Değişiklikleri Kaydet
                        </button>
                        <a href="@Url.Action("Index", "CourseCategory", new { area = "Admin" })" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 