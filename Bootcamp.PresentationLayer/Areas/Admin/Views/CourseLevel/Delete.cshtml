@model Bootcamp.EntityLayer.Concrete.CourseLevel
@{
    ViewData["Title"] = "Seviye Sil";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Seviye Sil</h1>
            <p class="page-subtitle">Bu seviyeyi silmek istediğinizden emin misiniz?</p>
        </div>
        <a href="@Url.Action("Index", "CourseLevel", new { area = "Admin" })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Geri Dön
        </a>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger-custom alert-custom">
        <i class="bi bi-x-circle me-2"></i>
        @TempData["Error"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Silme Onayı
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger-custom alert-custom mb-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-1">Dikkat!</h6>
                            <p class="mb-0">Bu işlem geri alınamaz. Seviye silindiğinde, bu seviyeye ait tüm kurslar da etkilenecektir.</p>
                        </div>
                    </div>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <div class="admin-card">
                            <div class="card-body text-center">
                                <div class="bg-danger bg-gradient rounded-circle p-3 mx-auto mb-3" style="width: 80px; height: 80px;">
                                    <i class="bi bi-bar-chart text-white fs-1"></i>
                                </div>
                                <h5 class="mb-2">@Model.Name</h5>
                                <p class="text-muted mb-0">Seviye ID: @Model.Id</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="admin-card">
                            <div class="card-body">
                                <h6 class="mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Seviye Detayları
                                </h6>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="bi bi-bar-chart me-2 text-primary"></i>
                                        <strong>Seviye Adı:</strong> @Model.Name
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-book me-2 text-warning"></i>
                                        <strong>Kurs Sayısı:</strong> @(Model.Courses?.Count ?? 0)
                                    </li>
                                    <li>
                                        <i class="bi bi-calendar me-2 text-info"></i>
                                        <strong>Oluşturulma:</strong> Sistem tarafından
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-danger-custom">
                            <i class="bi bi-trash me-2"></i>
                            Seviyeyi Sil
                        </button>
                        <a href="@Url.Action("Index", "CourseLevel", new { area = "Admin" })" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>