@model Bootcamp.EntityLayer.Concrete.CourseVideo

@{
    ViewData["Title"] = "Video Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Video Sil</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Dikkat!</strong> Bu videoyu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Video Adı:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Açıklama:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Video URL:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <a href="@Model.VideoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-external-link-alt"></i> Video Görüntüle
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">URL Yok</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Süre:</dt>
                        <dd class="col-sm-8">@(Model.Duration / 60) dakika</dd>

                        <dt class="col-sm-4">Kurs:</dt>
                        <dd class="col-sm-8">@Model.Course?.Name</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Evet, Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 