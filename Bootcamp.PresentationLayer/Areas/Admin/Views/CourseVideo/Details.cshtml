@model Bootcamp.EntityLayer.Concrete.CourseVideo

@{
    ViewData["Title"] = "Video Detayları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Video Detayları</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Video Bilgileri</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Video Adı:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Açıklama:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Video URL:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.VideoUrl))
                            {
                                <a href="@Model.VideoUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-external-link-alt"></i> Video Görüntüle
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">URL Yok</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Süre:</dt>
                        <dd class="col-sm-8">@(Model.Duration / 60) dakika (@Model.Duration saniye)</dd>

                        <dt class="col-sm-4">Kurs:</dt>
                        <dd class="col-sm-8">@Model.Course?.Name</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">Video Özeti</h6>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.Summary))
                            {
                                <p>@Model.Summary</p>
                            }
                            else
                            {
                                <p class="text-muted">Özet bulunmuyor</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 