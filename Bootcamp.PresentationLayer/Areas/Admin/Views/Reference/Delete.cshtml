@model Bootcamp.EntityLayer.Concrete.Reference
@{
    ViewData["Title"] = "Referans Sil";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Referans Sil</h1>
            <p class="page-subtitle">Bu referansı silmek istediğinizden emin misiniz?</p>
        </div>
        <a href="@Url.Action("Index", "Reference", new { area = "Admin" })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Geri Dön
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Silme Onayı
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Dikkat!</strong> Bu işlem geri alınamaz.
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <h6>Referans Detayları</h6>
                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Ad Soyad:</strong></td>
                        <td>@Model.NameSurname</td>
                    </tr>
                    <tr>
                        <td><strong>Sıra:</strong></td>
                        <td>@Model.Order</td>
                    </tr>
                    <tr>
                        <td><strong>Durum:</strong></td>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Oluşturulma:</strong></td>
                        <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <h6>Resim</h6>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.NameSurname" class="img-fluid rounded" style="max-width: 200px;">
                }
                else
                {
                    <div class="border rounded p-3 bg-light text-center">
                        <i class="bi bi-person text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">Resim yok</p>
                    </div>
                }
            </div>
        </div>
        
        <div class="mt-3">
            <h6>Yorum</h6>
            <div class="border rounded p-3 bg-light">
                @Model.Comment
            </div>
        </div>
        
        <form asp-action="Delete" method="post" class="mt-4">
            <input asp-for="Id" type="hidden" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger-custom">
                    <i class="bi bi-trash me-2"></i>
                    Evet, Sil
                </button>
                <a href="@Url.Action("Index", "Reference", new { area = "Admin" })" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-2"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div> 