@model Bootcamp.EntityLayer.Concrete.Reference
@{
    ViewData["Title"] = "Referans Düzenle";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Referans Düzenle</h1>
            <p class="page-subtitle">Müşteri referansını güncelleyin.</p>
        </div>
        <a href="@Url.Action("Index", "Reference", new { area = "Admin" })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>
            Geri Dön
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="card-header">
        <h5 class="card-title">
            <i class="bi bi-pencil me-2"></i>
            Referans Bilgileri
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NameSurname" class="form-label">Ad Soyad</label>
                    <input asp-for="NameSurname" class="form-control form-control-custom" placeholder="Müşteri adını giriniz">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["NameSurname"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">@ViewData.ModelState["NameSurname"].Errors.First().ErrorMessage</span>
                    }
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PositionName" class="form-label">Pozisyon</label>
                    <input asp-for="PositionName" class="form-control form-control-custom" placeholder="Yazılım Geliştirici">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["PositionName"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">@ViewData.ModelState["PositionName"].Errors.First().ErrorMessage</span>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ImageUrl" class="form-label">Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control form-control-custom" placeholder="https://example.com/image.jpg">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["ImageUrl"]?.Errors.Count > 0)
                    {
                        <span class="text-danger">@ViewData.ModelState["ImageUrl"].Errors.First().ErrorMessage</span>
                    }
                    <small class="text-muted">Profil resmi URL'i</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Order" class="form-label">Sıra</label>
                    <input asp-for="Order" type="number" class="form-control form-control-custom" placeholder="0">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Comment" class="form-label">Yorum</label>
                <textarea asp-for="Comment" class="form-control form-control-custom" rows="4" placeholder="Müşteri yorumunu giriniz"></textarea>
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Comment"]?.Errors.Count > 0)
                {
                    <span class="text-danger">@ViewData.ModelState["Comment"].Errors.First().ErrorMessage</span>
                }
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary-custom">
                    <i class="bi bi-check-circle me-2"></i>
                    Güncelle
                </button>
                <a href="@Url.Action("Index", "Reference", new { area = "Admin" })" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-2"></i>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div> 