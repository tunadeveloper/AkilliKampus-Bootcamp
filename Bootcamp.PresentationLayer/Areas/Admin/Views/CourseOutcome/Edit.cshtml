@model Bootcamp.EntityLayer.Concrete.CourseOutcome
@{
    ViewData["Title"] = "Kazanım Güncelle";
    var courses = ViewBag.Courses as List<Bootcamp.EntityLayer.Concrete.Course>;
}
<div class="page-header">
    <h1 class="page-title">Kazanım Güncelle</h1>
    <p class="page-subtitle">Kurs kazanımını düzenleyin.</p>
</div>
<div class="admin-card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Kazanım Başlığı</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CourseId" class="form-label">Kurs</label>
                <select asp-for="CourseId" class="form-control">
                    <option value="" disabled>Kurs Seçiniz</option>
                    @if (courses != null)
                    {
                        foreach (var course in courses)
                        {
                            <option value="@course.Id">@course.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary-custom">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>